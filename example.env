# FileServer Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================
APP_NAME=FileServer
APP_VERSION=2.0.0
APP_DESCRIPTION="Portable PHP File Storage Server"
DEBUG=false
TIMEZONE=UTC

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
BASE_URL=https://yourdomain.com
BASE_PATH=/FileServer
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_TYPE=sqlite
DB_HOST=localhost
DB_NAME=fileserver
DB_USER=fileserver_user
DB_PASS=your_secure_password
DB_PREFIX=fs_
DB_CHARSET=utf8mb4

# For SQLite (default - no setup required)
# DB_TYPE=sqlite
# DB_PATH=storage/system/database.sqlite

# For MySQL/MariaDB
# DB_TYPE=mysql
# DB_PORT=3306

# For PostgreSQL
# DB_TYPE=postgresql
# DB_PORT=5432

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=100MB
MAX_TOTAL_SIZE=10GB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx,zip,mp4,mp3,rar,7z
ENABLE_THUMBNAILS=true
THUMBNAIL_SIZE=300
THUMBNAIL_QUALITY=85

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=generate_random_64_char_string_here
ENCRYPTION_KEY=generate_another_random_64_char_string
JWT_SECRET=generate_jwt_secret_key_here
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
LOGIN_ATTEMPTS_MAX=5
LOGIN_LOCKOUT_TIME=900
ENABLE_2FA=false
ENABLE_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@localhost

# =============================================================================
# FEATURE SETTINGS
# =============================================================================
ENABLE_API=true
ENABLE_WEBHOOKS=false
ENABLE_COMPRESSION=true
ENABLE_VERSIONING=true
MAX_VERSIONS=5
ENABLE_SHARING=true
SHARE_TOKEN_LENGTH=32
ENABLE_SEARCH=true
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
ENABLE_CACHING=true
CACHE_DURATION=3600
UPLOAD_CHUNK_SIZE=1048576
STREAMING_CHUNK_SIZE=8192
MAX_CONCURRENT_UPLOADS=3

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
ENABLE_EMAIL=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_ENCRYPTION=tls

# =============================================================================
# AUTO-UPDATE SETTINGS
# =============================================================================
AUTO_UPDATE_CHECK=true
UPDATE_BRANCH=main
UPDATE_REPO=yourusername/FileServer
UPDATE_INTERVAL=86400

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=10
DOWNLOAD_RATE_LIMIT=50

# =============================================================================
# WEBHOOK SETTINGS
# =============================================================================
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=30
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# PLUGIN SYSTEM
# =============================================================================
ENABLE_PLUGINS=true
PLUGIN_AUTO_UPDATE=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300
